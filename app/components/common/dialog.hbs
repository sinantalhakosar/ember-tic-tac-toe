<div
  class="fixed z-50 flex justify-center items-center md:inset-0 h-[calc(100%-1rem)] backdrop-blur-sm"
>
  <div
    class="relative max-w-lg w-full max-h-full rounded-lg shadow bg-white dark:bg-gray-800 px-10 pt-10 pb-5 flex flex-col gap-5"
  >
    <button
      type="button"
      class="absolute top-2 right-2 ms-auto -mx-1.5 -my-1.5 bg-gray-100 text-gray-900 hover:text-gray-400 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-white inline-flex items-center justify-center h-8 w-8 dark:text-white dark:hover:text-gray-500 dark:bg-gray-700 dark:hover:bg-gray-800 mr-1 mt-1"
      {{on "click" @onClose}}
      data-testid="close-button"
    >
      <svg
        class="w-3 h-3"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
        />
      </svg>
    </button>
    <div class="text-center text-lg mt-2" data-testid="text">
      {{@text}}
    </div>
    <div class="flex justify-center gap-2">
      <button
        class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-800 rounded-lg text-md px-3 py-2 mb-2 focus:outline-none"
        type="button"
        {{on "click" @primaryAction}}
        data-testid="primary-action"
      >
        {{@primaryActionText}}
      </button>
      <button
        class="text-white bg-gray-600 hover:bg-gray-700 focus:ring-4 focus:ring-gray-800 rounded-lg text-md px-3 py-2 mb-2 focus:outline-none"
        type="button"
        {{on "click" @secondaryAction}}
        data-testid="secondary-action"
      >
        {{@secondaryActionText}}
      </button>
    </div>
  </div>
</div>